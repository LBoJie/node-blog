    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
    <script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="/dashboard/">Blog 控制台</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">

                <a class="nav-item nav-link" href="/dashboard/archives">文章管理 </a>
                <a class="nav-item nav-link" href="/dashboard/categories">分類管理 </a>

            </div>
        </div>
        <a class="nav-link logout" href="#">登出</a>
    </nav>
    <div class="main container my-4">
        <h1 class="text-center">Welcome</h1>
        <!-- hitwebcounter Code START -->

        <div class="row">
            <div class="col-3 h2 ">網頁造訪總人數 : </div>
            <div class="col-9 h2"> <a href="https://www.hitwebcounter.com" target="_blank">
                    <img src="https://hitwebcounter.com/counter/counter.php?page=7348752&style=0001&nbdigits=5&type=page&initCount=0"
                        title="Web Counter" Alt="counter free" border="0">
                </a></div>
            <div class="col-3 h2 ">文章總數 : </div>
